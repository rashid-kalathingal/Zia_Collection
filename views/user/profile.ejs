<!DOCTYPE html>
<html>
  <head>
    <title>User Profile</title>
    <style>
      /* styles.css */
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        background-image: url("https://wallpaperaccess.com/full/1567831.jpg");
        background-size: cover;
      }

      h1 {
        color: #333;
        font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
          sans-serif;
        font-stretch: semi-expanded;
      }

      p {
        margin-bottom: 10px;
        text-align: center;
      }

      .logged-in {
        font-weight: bold;
        color: green;
      }

      .not-logged-in {
        font-weight: bold;
        color: red;
      }

      .ftco-section {
        background-color: transparent;
        padding: 30px 0;
      }

      .billing-heading {
        color: #333;
        font-size: 24px;
        margin-bottom: 20px;
        text-align: center;
      }

      #address-list {
        margin-top: 20px;
      }

      .card {
        background-color: transparent;
        border: 1px solid transparent;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
      }

      .card-body {
        padding: 15px;
      }

      .card-title {
        font-size: 18px;
        margin-bottom: 10px;
        font-style: italic;
        text-align: center;
      }

      .card-text {
        margin-bottom: 5px;
        text-align: center;
      }

      .form-check-input {
        position: relative;
        top: 2px;
        margin-right: 5px;
      }

      #add-address-btn {
        color: #fff;
        background-color: #007bff;
        border-color: #007bff;
      }

      #add-address-btn:hover {
        background-color: #0069d9;
        border-color: #0062cc;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Helloo.. <%= user.name %></h1>
      <p>Email: <%= user.email %></p>
      <p>Mobile: <%= user.mobile %></p>
    </div>

    <section class="ftco-section">
      <div class="">
        <div class="row justify-content-center">
          <div class="col-xl-10 ftco-animate">
            <form
              action="#"
              id="checkout-form"
              class="billing-form"
              style="background-color: transparent; padding: 20px"
            >
              <div class="d-flex justify-content-end mb-4">
                <a href="/savedAddress"
                  ><button
                    type="button"
                    class="btn btn-primary"
                    id="add-address-btn"
                  >
                    Change/Add New Address
                  </button></a
                >
              </div>

              <h3 class="mb-4 billing-heading">Address</h3>
              <div class="row align-items-end">
                <div class="container" id="address-list">
                  <div class="row">
                    <% for (let i=0; i < address.length; i++) { %>
                    <div class="col-sm-12 col-md-6">
                      <div
                        class="card mx-auto w-100 card-hover-shadow mb-4"
                        style="max-width: 100% !important"
                      >
                        <div class="card-body">
                          <div class="row">
                            <div class="col-md-1">
                              <div class="form-check">
                                <input class="form-check-input" style="z-index:
                                10;" type="radio" name="address" id="address<%=
                                i %>" value="<%= address[i]._id %>" <% if (i==0)
                                { %> checked <% } %>>
                              </div>
                            </div>
                            <div class="col-md-11">
                              <h5 class="card-title mb-1">
                                <%= `${address[i].firstname}
                                ${address[i].lastname}` %>
                              </h5>
                              <p class="card-text mb-1">
                                <%= address[i].streetaddress %>
                              </p>
                              <p class="card-text mb-1">
                                <%= address[i].appartment %>
                              </p>
                              <p class="card-text mb-1">
                                <%= address[i].state %>
                              </p>
                              <p class="card-text mb-1">
                                <%= address[i].town %>
                              </p>
                              <p class="card-text mb-0">
                                <%= address[i].zip %>
                              </p>
                              <p class="card-text mt-1 mb-0">
                                Phone: +91 <%= address[i].mobile %>
                              </p>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <% } %>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
