											<button type="button" class="btn btn-info"
												style="width: 30px; height: 31px !important; border-radius: 0;"
												onclick="changeQuantity('<%=item._id%>','<%=item.productInfo._id%>',1)">+</button>
											</div>
		




									</td>
									<td  class="column-5">₹<%=item.total %></td>

									<td class="category">
										<button type="button" class="btn btn-danger"
											style="width: 87px; height: 31px !important; border-radius: 0;"
											onclick="removeItem('<%=item._id%>','<%=item.productInfo._id%>')">Remove</button>
									</td>
									
								</tr>
								<% }) %>
								
							</table>
						</div>












						<div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
