<link
  rel="stylesheet"
  href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css"
/>
<%- include('../admin/partials/head.ejs') -%> <%-
include('../admin/partials/header.ejs') -%>
<div class="d-flex" style="display: flex">
  <div class="hea"><%- include('../admin/partials/nav.ejs') -%></div>
  <div class="heavhgnvbn" style="width: 100%">
    <br /><br /><br /><br />

    <form action="/admin/offer" id="cpn-gen-form" method="post" style="width: 270px;">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="title" class="form-control" required />
      </div>
      <div class="mb-3">
        <label for="category" class="form-label">Select Category</label>
        <div class="input-group">
          <span class="input-group-text"
            ><i class="bi bi-currency-dollar"></i
          ></span>
          <select name="category" class="form-select" required>
            <option value="">Select a category</option>
            <% categoryList.forEach(function(cat) { %>
            <option value="<%= cat %>"><%= cat %></option>
            <% }); %>
          </select>
        </div>
      </div>
      <div class="mb-3">
        <label for="discount" class="form-label">Discount</label>
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-percent"></i></span>
          <input type="text" name="discount" class="form-control" required />
        </div>
      </div>
      <div class="mb-3">
        <label for="expires" class="form-label">Expires On</label>
        <input type="date" name="expires" class="form-control" required />
      </div>
      <input type="text" name="offer" class="form-control" hidden />
      <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary btn-block">
          Create Offer
        </button>
      </div>
    </form>


    <table class="table table-striped table-dark mt-5" id="myTable" style="padding-left: 30px; padding-right: 30px;" >

      <thead>
        <tr style="border-width: 5px; background-color: rgb(47, 37, 37);" >
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Discount</th>
          <th scope="col">Category</th>
        
        </tr>
      </thead>
      <tbody>
        <% (locals.offer || []).forEach((item ,index)=> { %>
        <tr>
          <th scope="row"><%= index+1 %></th>
          <td><%= item.title %></td>
          <td><%= item.discount %> %</td>
       
          <td><%= item.category %></td>
         
          
         
    
        </tr>
        <% }) %>
    
    
 
    
    
    
      </tbody>
    </table>





    


  </div>
</div>
<%- include('../admin/partials/script.ejs') -%>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script>
  $(document).ready(function () {
    $("#myTable").DataTable();
  });
</script>


